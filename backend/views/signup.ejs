<% title='Signup' %>

<h1 class="text-center mb-4">Signup</h1>
<% if (message) { %>
  <div class="alert alert-danger" role="alert">
    <%= message %>
  </div>
<% } %>
<% if (error && error.length > 0) { %>
  <div class="alert alert-danger" role="alert">
    <% Object.values(error).forEach(err => { %>
      <p><%= err.msg %></p>
    <% }); %>
  </div>
<% } %>
<form action="/api/signup" class="container" method="post">
  <div class="form-group">
    <label for="email" class="font-weight-bold">Email:</label>
    <input type="text" id="email" name="email" class="form-control">
  </div>
  <div class="form-group">
    <label for="password" class="font-weight-bold">Password:</label>
    <input type="password" id="password" name="password" class="form-control">
  </div>
  <div class="form-group">
    <label for="confirmPassword" class="font-weight-bold">Confirm Password:</label>
    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
  <p class="text-center">Already have an account ? <a href="/api/login">Login</a></p>
</form>
